<pages:EditorPage x:Name="Page" x:Class="ArcGIS.Desktop.Metadata.Editor.Pages.CharacterStringAreaSync"
    xmlns:toolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:v="clr-namespace:ArcGIS.Desktop.Metadata.Editor.Validation"
    xmlns:pages="clr-namespace:ArcGIS.Desktop.Metadata.Editor.Pages"
    xmlns:prop="clr-namespace:ArcGIS.Desktop.Metadata.Editor.Properties"
    xmlns:editor="http://www.esri.com/metadata/editor/"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Metadata.Editor.Controls"
    Loaded="FillXml">  
  <Grid>
    <ListBox Style="{DynamicResource EditorNoScrollListBoxStyle}" ItemsSource="{Binding XPath=.}">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel/>
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
      <ListBox.ItemTemplate>
        <DataTemplate>
          <controls:Resizer>
            <TextBox Style="{DynamicResource EditorTextAreaStyle}"
                SourceUpdated="DefaultValueChanged"
                Loaded="UpdateBinding">
              <Binding NotifyOnValidationError="True"
                  NotifyOnSourceUpdated="True"
                  ElementName="Page"
                  Path="DefaultValue"
                  Mode="TwoWay"
                  UpdateSourceTrigger="PropertyChanged">
              </Binding>
            </TextBox>
          </controls:Resizer>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</pages:EditorPage>
